<%= form_for (@restaurant) do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation">
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class = "sr-only">Close</span></button>
      <h4><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h4>

      <ul>
      <% restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :restaurant_name, class: "form-control", placeholder:"Jiminey's Crickets" %>
  </div>

  <div class="form-group">
    <%= form.label :address %><br>
    <%= form.text_field :address, id: :restaurant_address, class: "form-control", placeholder: "201 Brookline Avenue, Boston, MA 12345" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %><br>
    <%= form.text_field :phone, id: :restaurant_phone, class: "form-control", placeholder: "(01) 1234567" %>
  </div>

  <div class="form-group">
    <%= form.label :website %><br>
    <%= form.text_field :website, id: :restaurant_website, class: "form-control", placeholder: "https://www.myspace.com" %>
  </div>
   <div class="form-group">
    <%= form.label :image %><br>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
